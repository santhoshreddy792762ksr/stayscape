<style>
   
/* Search Form Container */
.search-form {
  align-items: center;
  gap: 8px;
}

/* Input Field Styling */
.search-input {
  padding: 8px 16px;
  border: 1px solid #e0e0e0;
  border-radius: 24px;
  font-size: 14px;
  transition: all 0.2s ease;
  min-width: 180px;
}

.search-input:focus {
  outline: none;
  border-color: #4f46e5;
  box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.1);
}

/* Search Button Styling */
.btn-search {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  background-color: #4f46e5;
  color: white;
  border: none;
  border-radius: 24px;
  font-size: 14px;
  transition: all 0.2s ease;
}

.btn-search:hover {
  background-color: #4338ca;
  transform: translateY(-1px);
}

.btn-search:active {
  transform: translateY(0);
}

/* Search Icon */
.btn-search i {
  font-size: 14px;
}

/* Search Text */
.search-text {
  display: inline-block;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .search-text {
    display: none;
  }
  
  .btn-search {
    padding: 8px 12px;
  }
  
  .search-input {
    min-width: 140px;
  }
}

</style>

